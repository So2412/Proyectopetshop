            </ul>
           
        </section> 
    </header>
    <nav class="menu">
        <a href="cerrar">Cerrar sesion</a>
    </nav>
    <div class="login-box">
        <h1>Cita</h1>
        <form action="/frminsertarcitas" method="POST">
          <!--  INPUT -->
          <!--<input type="text" name="CitaId" class="" placeholder="Id Cita">-->
          <input type="text" name="CitaIdServi" class="" placeholder="Id Servivio">
          <input type="text" name="CitaIdMasco" class="" placeholder="Id Masco">
          <input type="text" name="CitaDocVeteri" class="" placeholder="Documento Veterinario">
          <input type="text" name="CitaCorreo" class="" placeholder="Correo">
          <input type="text" name="CitaTelefo" class="" placeholder="Telefono">
          <input type="text" name="CitaHoraAsig" class="" placeholder="Hora Asignada">
          <label class="tit">Fecha Asignada:</label>
          <input type="date" name="CitaFechaAsig" id="fecha" class="" placeholder="Fecha Asignada">
          <!--  BUTTON -->
          <button type="submit">Insertar</button>
        </form>
      </div>
      <from action="" name="frm" id="frm" class="tabla">
        <section class="scroll">
        <table class="table">
            <thead>
                <tr>
                    <th>ID CITA</th>
                    <th>ID SERVICIO</th>
                    <th>ID MASCOTA</th>
                    <th>DOCUMENTO VETERINARIO</th>
                    <th>CORREO</th>
                    <th>TELEFONO</th>
                    <th>HORA ASIGNADA</th>
                    <th>FECHA ASIGNADA</th>
                    <th>ACTUALIZAR</th>
                    <th>ELIMINAR</th>
                </tr>
            </thead>
    
            <tbody>
             <% datos.forEach(function (datos){ %>    
                <tr>
                    <td><input type="text" value="<%=datos.CitaId%>" name="cit" id="cit" class="cit"></td>
                    <td><input type="text" value="<%=datos.CitaIdServi%>" name="ser" id="ser" class="ser"></td>
                    <td><input type="text" value="<%=datos.CitaIdMasco%>" name="mas" id="mas" class="mas"></td>                
                    <td><input type="text" value="<%=datos.CitaDocVeteri%>" name="vet" id="vet" class="vet"></td> 
                    <td><input type="text" value="<%=datos.CitaCorreo%>" name="cor" id="cor" class="cor"></td> 
                    <td><input type="text" value="<%=datos.CitaTelefo%>" name="tel" id="tel" class="tel"></td>
                    <td><input type="text" value="<%=datos.CitaHoraAsig%>" name="hor" id="hor" class="hor"></td>
                    <td><input type="text" value="<%=datos.CitaFechaAsig%>" name="fec" id="fec" class="fec"></td>
                    <td><input type="submit" value="Actualizar" name="btnact" id="btnact" class="btnact"></td>
                    <td><input type="submit" value="Eliminar" name="btneli" id="btneli" class="btneli"></td>                                
                </tr>
             <%})%>
            </tbody>
        </table>
    </section>
    </from>

</body>
</html>