  </nav>




    <section class="container">
		<div class="contact-box">
			<div class="left"></div>
			<form class="right" action="/frminsertarcitaspri" method="POST">
				<h1 class="container-h1">Agendar cita</h1>
                <h3 class="container-h3">Ingresa la siguiente informacion para agendar tu cita</h3>
                <h5 class="container-h5">Da click en <a href="/regi">registrar</a> si aun no estas registrado</h5>
                <h5 class="container-h5">¿Ya estas registrado? da click <a href="/consultarmasco">aqui</a> para consultar los datos de tu mascota</h5>
                <select name="CitaIdServi" id="cedula" class="field" name="Busque el numero del Servicio"> 
                    <option disabled selected>Servicio</option>
                    <% for(i = 0; i<tbservicios.length;i++){%>
                    <option  value="<%=tbservicios[i].ServiId%>"><%=tbservicios[i].ServiId%> - <%=tbservicios[i].ServiNombre	%></option>
                    <%}%>
                </select>
                <!--<input type="text" class="field" name="CitaIdServi" placeholder="Servicio">-->
				<input type="text" class="field" name="CitaIdMasco" placeholder="Id de Mascota">
                <select name="CitaDocVeteri" id="cedula" class="field" name="Busque el documento del veterinario"> 
                    <option disabled selected> Veterinario</option>
                    <% for(i = 0; i<tbveterinario.length;i++){%>
                    <option  value="<%=tbveterinario[i].VeteriDoc%>"><%=tbveterinario[i].VeteriNombre%> <%=tbveterinario[i].VeteriApellido	%></option>
                    <%}%>
                </select>
                <!--<input type="text" class="field" name="CitaDocVeteri" placeholder="Verterinario"-->
				<input type="text" class="field" name="CitaCorreo" placeholder="Correo">
                <input type="text" class="field" name="CitaTelefo" placeholder="Telefono">
                <select class="field" name="CitaHoraAsig">
                    <option disabled selected>Hora</option>
                    <option value="10:00 am">10:00 am</option>
                    <option value="11:00 am" >11:00 am</option>
                    <option value="12:00 pm">12:00 pm</option>
                    <option value="1:00 pm" >1:00 pm</option>
                    <option value="2:00 pm">2:00 pm</option>
                    <option value="3:00 pm">3:00 pm</option>
                    <option value="4:00 pm">4:00 pm</option>
                  </select>
				<!--<input type="text" class="field" name="CitaHoraAsig" placeholder="Hora">-->
                <label class="tit">Fecha Asignada:</label>
                <input type="date" class="field" name="CitaFechaAsig" placeholder="Fecha">
				<button type="submit" class="btn">Registrar</button>
            </form>
		</div>
    </section>

    <section class="contenedorboton">
        <a href="/consultarcitas"><button class="botoncont">Consulta la cita de tu mascota</button></a>
    </section>


    <script src="js/barralateral.js"></script>


</body>
</html>