            </ul>
           
        </section> 
    </header>
    <nav class="menu">
        <a href="cerrar">Cerrar sesion</a>
    </nav>
    <div class="login-box">
        <h1>Pedidos</h1>
        <form action="/frminsertarpedido" method="POST">
          <!--  INPUT -->
          <input type="text" name="PedId"          class="" placeholder="Id pedido">
          <input type="text" name="PedProveDoc"    class="" placeholder="Documento proveedor">
          <label class="tit">Fecha Pedido:</label>
          <input type="date" name="PedFechaPedido" class=""  id="fecha" placeholder="Fecha pedido">
          <label class="tit">Fecha Entrega:</label>
          <input type="date" name="PedFechaEntrega"class=""  id="fecha" placeholder="Fecha entrega">
          <!--  BUTTON -->
          <button type="submit">Insertar</button>
        </form>
      </div>

      
    <from action="" name="frm" id="frm" class="tabla">
        <section class="scroll">
        <table class="tablecentrar">
            <thead>
                <tr>
                    <th>ID PEDIDO</th>
                    <th>DOCUMENTO PROVEEDOR</th>
                    <th>FECHA PEDIDO</th>
                    <th>FECHA ENTREGA</th>
                </tr>
            </thead>
    
            <tbody>
             <% datos.forEach(function (datos){ %>    
                <tr>
                    <td><input type="text" value="<%=datos.PedId%>" name="idd" id="idd" class="idd"></td>
                    <td><input type="text" value="<%=datos.PedProveDoc%>" name="doc" id="doc" class="doc"></td>
                    <td><input type="text" value="<%=datos.PedFechaPedido%>" name="ped" id="ped" class="ped"></td>                
                    <td><input type="text" value="<%=datos.PedFechaEntrega%>" name="en" id="en" class="en"></td>                                
                </tr>
             <%})%>
            </tbody>
        </table>
    </section>
    </from>


</body>
</html>