<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Consulta</title>
    <script src="js/jquery-3.6.0.min.js"></script>
    <script src="js/cancelarcita.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.1.9/dist/sweetalert2.all.min.js"></script>
    <link href= "css/consultamasco.css" rel="stylesheet" type="text/css">
</head>
<body>
    <section class="container">
		<div class="contact-box">
			<form class="right" action="/frmconsultadatcita" method="POST">
				<h1 class="container-h1">CONSULTAR CITA</h1>
                <h3 class="container-h3">Ingresa la siguiente informacion para consultar los datos de tu cita</h3>

				<input type="text" class="field" name="idmascota" placeholder="Numero id de la mascota registrada">
				<button type="submit" class="btn">Consultar</button>
            </form>
		</div>
    </section>

    <from action="" name="frm" id="frm" class="tabla">
        <section class="scroll">
        <table class="table">
            <thead>
                <tr>
                    <th>ID CITA</th>
                    <th>ID SERVICIO</th>
                    <th>ID MASCOTA</th>
                    <th>DOCUMENTO VETERINARIO</th>
                    <th>CORREO</th>
                    <th>TELEFONO</th>
                    <th>HORA ASIGNADA</th>
                    <th>FECHA ASIGNADA</th>
                </tr>
            </thead>
    
            <tbody>
             <% datos.forEach(function (datos){ %>    
                <tr>
                    <td><input type="text" value="<%=datos.CitaId%>" name="cit" id="cit" class="cit" readonly></td>
                    <td><input type="text" value="<%=datos.CitaIdServi%>" name="ser" id="ser" class="ser" readonly></td>
                    <td><input type="text" value="<%=datos.CitaIdMasco%>" name="mas" id="mas" class="mas" readonly></td>                
                    <td><input type="text" value="<%=datos.CitaDocVeteri%>" name="vet" id="vet" class="vet" readonly></td> 
                    <td><input type="text" value="<%=datos.CitaCorreo%>" name="cor" id="cor" class="cor" readonly></td> 
                    <td><input type="text" value="<%=datos.CitaTelefo%>" name="tel" id="tel" class="tel" readonly></td>
                    <td><input type="text" value="<%=datos.CitaHoraAsig%>" name="hor" id="hor" class="hor" readonly></td>
                    <td><input type="text" value="<%=datos.CitaFechaAsig%>" name="fec" id="fec" class="fec" readonly></td>
                    <td><input type="submit" onclick="cancelada()" value="CANCELAR" name="btneli" id="btneli" class="btneli" readonly></td>                                
                </tr>
             <%})%>
            </tbody>
        </table>
    </section>
    </from>

    <section class="contenedorboton">
        <a href="/agendarcitas"><button class="botoncont">Da click aqui para volver</button></a>
    </section>
    
  
    <script>
        function cancelada(){
          Swal.fire({
            position: 'top-center',
            icon: 'success',
            title: 'Cita cancelada',
            timer: 800
            })
            }
    </script>

</body>
</html>